
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../../../Multimedia/Branding/isotype.svg">
    <title>Funko Shop</title>
    <link rel="stylesheet" href="../../CSS/index.css">
    <link rel="stylesheet" href="../../CSS/pages/item.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body>

    <%- include('../partials/header')%>
    <main>
        <section class="item">
            <div>
                <img src="<%= character.image %>" alt="<%= character.name %>">
            </div>

            <div class="item_description">
                <div class="item_details">
                    <span><%= character.brand %></span>
                    <h2><%= character.name %></h2>
                    <p><%= character.description %></p>
                </div>

                <div class="item_price">
                    <p>$<%= character.price %></p>
                    <div>
                        <button> Agregar al Carrito </button>
                    </div>
                </div>

                <div class="payment_methods">
                    <a href="/"> Ver métodos de pago -</a>
                    <span> <%= character.payments %></span>
                </div>
            </div>
        </section>
        
        <% if (featured_characters && featured_characters.length > 0) { %>
        <section class="carousel">
            <p>Productos destacados</p>
            <div class="carousel_wrapper">
                <button class="carousel_button left" onclick="scrollCarousel(-1)">‹</button>
                <div class="carousel_items">
                        <% featured_characters.forEach(character => { %>
                        <div>
                            <a href="/shop/item/<%= character.id %>">
                                <figure>
                                    <img src="<%= character.image %>" alt="<%= character.name %>">
                                </figure>
                                <div class="carousel_description">
                                    <span><%= character.brand %></span>
                                    <h2><%= character.name %></h2>
                                    <p><%= character.price %></p>
                                    <div class="carousel_payment_methods">
                                        <span><%= character.payments %></span>
                                    </div>
                                </div>
                            </a>
                        </div>
                        <% }); %>
                </div>
                <button class="carousel_button right" onclick="scrollCarousel(1)">›</button>
            </div>
        </section>
        <% } %>

    </main>
    <%- include('../partials/footer')%>

</body>

</html>


<script>
    function scrollCarousel(direction) {
        const carousel = document.querySelector('.carousel_items');
        const itemWidth = carousel.querySelector('div').offsetWidth + 50;
        carousel.scrollLeft += direction * itemWidth;
    }
</script>
