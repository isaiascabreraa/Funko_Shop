
<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="/Multimedia/Branding/isotype.svg">
    <title>Funko Shop</title>
    <link rel="stylesheet" href="/CSS/index.css">
    <link rel="stylesheet" href="/CSS/pages/products.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body>
    <%- include('../partials/header')%>
    <main>
        <section class="account_products">
            <div class="product-list">
                <div>
                    <h2>LISTADO DE PRODUCTOS</h2>
                </div>
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Código</th>
                            <th>Nombre del Producto</th>
                            <th>Categoría</th>
                            <th></th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (products && products.length > 0) { %>
                            <% let index = 1;%>
                            <% products.forEach(product => { %>
                                <tr>
                                    <td><%= index++ %></td>
                                    <td><%= product.id %></td>
                                    <td><%= product.name %></td>
                                    <td><%= product.brand_name  %></td>
                                    <td>
                                        <a href="/products/editar/<%= product.id %>" class="action-icon">
                                            <img src="/Multimedia/Iconos/edit_pencil.svg" alt="Editar" class="edit-icon"> 
                                        </a>
                                    </td>
                                    <td>
                                        <a href="/products/eliminar/<%= product.id %>" class="action-icon">
                                            <img src="/Multimedia/Iconos/delete_trash.svg" alt="Eliminar" class="delete-icon"> 
                                        </a>
                                    </td>
                                </tr>
                            <% }); %>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </section>
    </main>
    <%- include('../partials/footer')%>

</body>

</html>