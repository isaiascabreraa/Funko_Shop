
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" href="../Multimedia/Branding/isotype.svg">
    <title>Funko Shop</title>
    <link rel="stylesheet" href="../CSS/index.css">
    <link rel="stylesheet" href="../CSS/pages/home.css">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Raleway:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
</head>

<body>
    
    <%- include('./partials/header')%>
    <main>
        <section class="home_banner">
            <figure>
                <img src="../Multimedia/Banner/funkos-banner.webp" alt="Banner FunkoShop image"/> 
            </figure>

            <div class="banner_items">
                <div class="banner_description">
                    <h2> Nuevos ingresos </h2>
                    <p> Descubre el proximo FunkoPop de tu coleccion </p>
                </div>
                <div class="banner_nav">
                    <a href="/shop"> SHOP </a>
                </div>
        </section>

        <section class="home_section">
          <div class="home_items">
            <% featured_characters.forEach(character => { %>
              <div class="product_item">
                <figure>
                  <img src="<%= character.primary_image %>" alt="<%= character.name %>">
                </figure>
                <div class="product_description">
                  <p><%= character.brand_name %></p>
                  <h2><%= character.name %></h2>
                  <p><%= character.description %></p>
                  <div>
                    <a href="/shop">VER COLECCIÃ“N</a>
                  </div>
                </div>
              </div>
            <% }) %>
          </div>
        </section>
        
      </main>
    <%- include('./partials/footer')%>
    

</body>

</html>